# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ragaujam?retryWrites=true&w=majority

# Security Configuration
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=3600000

# AWS S3 (for image storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=eu-north-1
AWS_S3_BUCKET=ragaujam-images

# Site Configuration
SITE_URL=https://ragaujam.lt
SITE_NAME=Ragaujam.lt

# AI APIs (Optional)
# ⚠️ IMPORTANT: Store actual keys in .env.local (local dev) or Vercel (production)
# Never commit real API keys to git!
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7
OPENAI_TIMEOUT_MS=60000
NUTRITIONIX_APP_ID=your-nutritionix-app-id
NUTRITIONIX_API_KEY=your-nutritionix-api-key

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Ezoic (for ads)
EZOIC_SITE_ID=your-ezoic-site-id
